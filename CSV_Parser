package com.company;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;

public class Main {

    public static void main(String[] args) {
        String csvFile = "/Users/denysenko/Desktop/АСК Титан/Каховская ГЭС/данные тест/БП-р.ст11-13.csv";
        ArrayList<String> list = parserCSV(csvFile);
        /*for (int i = list.size() - 1; i > 0; i--) {
            System.out.println("value: " + list.get(i) + " date: " + list.get(i - 1));
        }*/
        ArrayList<String> value = listToList(list, 0);
        ArrayList<String> date = listToList(list, 1);
        for (int i = 0; i < date.size(); i++) {
            System.out.println(value.get(i) + " " + date.get(i));
        }
    }

    public static ArrayList<String> formatData(ArrayList<String> date){
        ArrayList<String> list = new ArrayList<>();
        for (int i = 0; i < date.size(); i++) {
            String name = s.substring(4, s.length()-4);
        }
    }

    public static ArrayList<String> listToList(ArrayList<String> csvFile, int column){
        ArrayList<String> list = new ArrayList<>();
        for (int i = csvFile.size()-1; i >= 0; i--) {
            switch (column){
                case 0:{
                    if (i % 2 == 0)
                        list.add(csvFile.get(i));
                    break;
                }
                case 1:{
                    if (i % 2 != 0)
                        list.add(csvFile.get(i));
                    break;
                }
            }
        }
        return list;
    }

    public static ArrayList<String> parserCSV(String csvFile){
        BufferedReader reader = null;
        String line = "";
        String cvsSplitBy = ",";
        ArrayList<String> csvList = new ArrayList<>();

        try{
            reader = new BufferedReader(new FileReader(csvFile));
            while ((line = reader.readLine()) != null){
                String[] list = line.split(cvsSplitBy);
                csvList.add(0, list[0]);
                csvList.add(1, list[1]);
                //System.out.println("Date = " + list[0] + " , Value = " + list[1]);
            }
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            if (reader != null){
                try {
                    reader.close();
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
        return csvList;
    }
}

